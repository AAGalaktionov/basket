<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextField?>
<StackPane fx:controller="sample.Controller"
           maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
           prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <ImageView fitHeight="800.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Pictures/basket.jpg"/>
            </image>
            <effect>
                <DropShadow blurType="TWO_PASS_BOX" height="255.0" radius="110.0125" width="187.05"/>
            </effect>
        </ImageView>
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <JFXButton fx:id="button" focusTraversable="true" layoutX="0.0" layoutY="200.0" mnemonicParsing="false"
                           prefHeight="52.0" prefWidth="52.0"
                           style="-fx-background-color: orange; -fx-background-radius: 2000;" text="BALL"/>

                <JFXButton fx:id="buttonAnalytically" layoutX="75.0" layoutY="500.0" mnemonicParsing="false" style="-fx-background-color: white; -fx-background-radius: 20;"
                           text="Analytically" />
                <JFXButton fx:id="buttonNumerical" layoutX="175.0" layoutY="500.0" mnemonicParsing="false" style="-fx-background-color: white; -fx-background-radius: 20;"
                           text="Numerical" />
                <JFXButton fx:id="buttonAirResistance" layoutX="275.0" layoutY="500.0" mnemonicParsing="false" style="-fx-background-color: white; -fx-background-radius: 20;"
                           text="AirResistance" />


                <TextField fx:id="textField1" layoutX="75.0" layoutY="400.0" prefHeight="23.0" prefWidth="78.0"
                           text="initial speed"/>
                <TextField fx:id="textField2" layoutX="75.0" layoutY="440.0" prefHeight="23.0" prefWidth="78.0" text="angle"/>


            </children>
        </AnchorPane>
    </children>
</StackPane>
